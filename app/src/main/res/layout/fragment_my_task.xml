<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyTask">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:icon="@drawable/baseline_add_24"
        android:text="New Task"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Task"
            android:textSize="40sp"
            android:paddingTop="30dp"
            android:paddingStart="20dp"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentTop="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/myTaskEmptyStateView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:srcCompat="@drawable/purple_notes"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/myTaskEmptyStateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Task for the moment"
                android:gravity="center"
                android:layout_below="@+id/myTaskEmptyStateView"
                android:textSize="20sp"
                android:visibility="gone"/>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/myTaskRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/myTaskRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="50dp"
                    android:layout_marginBottom="100dp"/>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>