<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Files">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/fileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Files"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textSize="40sp"
        android:layout_marginTop="56dp"/>
    <LinearLayout
        android:id="@+id/innerNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fileTitle">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/internalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Internal"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/externalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FTP Storage"/>
    </LinearLayout>
    <ListView
        android:layout_below="@+id/innerNav"
        android:id="@+id/file_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

